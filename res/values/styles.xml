<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <color name = "textColour">#404040</color>
    <color name = "red">#E60000</color>
    <color name ="lightred">#F58D7A</color>
    <color name = "darkred">#9A200A</color>
    <color name = "purple">#CC33FF</color>
    <color name = "yellow">#FFFC00</color>
    <color name = "green">#69BF27</color>
    <color name = "lightgreen">#D6FFB6</color>
    <color name = "blue">#0830F5</color>
    <color name = "brown">#993333</color>
    <color name = "grey">#E0E0E0 </color>
    <color name = "turquoise">#6AE7EE</color>
    <color name = "orange">#FF9900</color>
    <color name = "orangeP">#FF9797</color>
    <color name = "lilacP">#FFACEC</color>
    <color name = "purpleP">#B89AFE</color>
    <color name = "blueP">#4985DB</color>
    <color name = "greenpineP">#33FDC0</color>
    <color name = "yellowP">#FFE920</color>
    <color name = "default_lightBlue">#33b5e5</color>
    <color name ="white">#FFFFFF</color>
    <color name ="opaque_grey">#40303030</color>
    <color name ="partition_grey">#E0E0E0</color>
    <color name ="transparent">#90ffffff</color>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related..z to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Text">
        <item name="android:textColor">@color/textColour</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Text2">
        <item name="android:textColor">@color/textColour</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="Text_Exercise_Label" parent ="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">7dp</item>        
    </style>
    
    <style name="achievement_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Partition">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/partition_grey</item>
    </style>
    <style name="Partition_vertical">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="learn_test">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="learn" parent="learn_test">
        <item name="android:layout_marginRight">-20dp</item>
        <item name="android:src">@drawable/learn</item>
        <item name="android:contentDescription">@string/learn_desc</item>
    </style>
    <style name="test" parent="learn_test">
        <item name="android:layout_marginLeft">-19dp</item>
        <item name="android:src">@drawable/test</item>
        <item name="android:contentDescription">@string/test_desc</item>
    </style>
    <style name="exercise_picture">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="horizontal_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="achieved_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="progressBox">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">15dp</item>
    </style>
    
    <style name="progressBox2">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">10dp</item>
    </style>
    <style name="scoreBox">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    
    <style name="quit_button" parent="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="check_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/green</item>
        <item name="android:padding">18dp</item>
    </style>
    
    <style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
  
    <style name="score_img">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
	</style>
</resources>
