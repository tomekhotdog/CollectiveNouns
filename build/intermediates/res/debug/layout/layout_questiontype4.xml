            android:id="@+id/progress3"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress4"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress5"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress6"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress7"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress8"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress9"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress10"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress11"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress12"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress13"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress14"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        <ImageView
            android:id="@+id/progress15"
            style="@style/progressBox2"
            android:contentDescription="@string/progress_desc"
            android:src="@drawable/progressbox" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/partition_grey"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:gravity="center" >
        
       <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="5dp"
        android:text="@string/A"
        android:textAppearance="?android:attr/textAppearanceLarge" />
       
    <TextView
        android:id="@+id/collective_noun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textColor="@color/orange"
        android:text="@string/collective1"
        android:textStyle="bold|italic"
        android:textAppearance="?android:attr/textAppearanceLarge" /> 
        
    <TextView
        android:id="@+id/of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="@string/of"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:text="@string/underscore"
        android:textStyle="bold|italic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"
        android:onClick="requestEditTextFocus" /> 
        
    </LinearLayout>
    
     <EditText
            android:id="@+id/answerText"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:hint="@string/questionGroupHint"
    		android:inputType="text"
    		android:imeOptions="actionDone"
    		android:layout_gravity="center"
    		android:layout_marginBottom="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/check"
            style="@style/check_button"
            android:onClick="q4Check"
            android:text="@string/check" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/correction_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightgreen"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:visibility="invisible" >
        
        <TextView 
            android:id="@+id/Correct_Incorrect"
            android:text="@string/correct"
            style="@style/Text"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:textStyle="bold"/>
        
        <TextView 
            android:id="@+id/correctAnswer"
            style="@style/Text"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:text="@string/exampleSentence"
            />
        
    </LinearLayout>

</LinearLayout>

